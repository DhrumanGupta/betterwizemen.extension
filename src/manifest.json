{
  "name": "Better Wizemen",
  "description": "Adds accessibility options to Wizemen (No captcha, Dark Mode, etc.)",
  "version": "0.0.3",
  "manifest_version": 3,
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup/popup.html",
    "default_title": "Better Wizemen"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.wizemen.net/*"
      ],
      "js": [
        "main.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "injections/*"
      ],
      "matches": [
        "*://*.wizemen.net/*"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "storage"
  ]
}
