{
  "name": "Better Wizemen",
  "description": "Adds accessibility options to Wizemen (No captcha, Dark Mode, etc.)",
  "version": "0.0.1",
  "manifest_version": 3,
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://psg.wizemen.net/*",
        "*://psn.wizemen.net/*",
        "*://pws.wizemen.net/*"
      ],
      "js": [
        "main.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "injections/noCaptcha.js",
        "injections/tesseract.min.js"
      ],
      "matches": [
        "*://psg.wizemen.net/*",
        "*://psn.wizemen.net/*",
        "*://pws.wizemen.net/*"
      ]
    }
  ]
}
